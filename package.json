{
  "name": "pretty-typescript-errors-plus",
  "displayName": "Pretty TypeScript Errors Plus",
  "description": "Make TypeScript errors prettier and more dissectible with AI inside VSCode",
  "publisher": "OsadaVidath",
  "repository": {
    "type": "git",
    "url": "https://github.com/osadavc/pretty-typescript-errors-plus"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pretty-typescript-errors-plus.setOpenAIApiKey",
        "title": "Pretty TypeScript Errors Plus: Set OpenAI Compatible API Key"
      },
      {
        "command": "pretty-typescript-errors-plus.clearOpenAICredentials",
        "title": "Pretty TypeScript Errors Plus: Clear OpenAI Credentials"
      }
    ],
    "configuration": {
      "title": "Pretty TypeScript Errors Plus",
      "properties": {
        "prettyTypeScriptErrorsPlus.openai.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI Base URL or compatible API base URL",
          "scope": "application"
        },
        "prettyTypeScriptErrorsPlus.openai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model to use for error explanations",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.1.12",
    "ai": "^4.1.41",
    "zod": "^3.24.2"
  }
}
